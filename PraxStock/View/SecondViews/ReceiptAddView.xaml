<Window x:Class="PraxStock.View.SecondViews.ReceiptAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PraxStock.View.SecondViews"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Поступление" 
        Height="300" 
        Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel
            Orientation="Vertical"
            Margin="5">
            <Label
                Content="Позиция:"/>
            <ComboBox
                IsEditable="False"
                ItemsSource="{Binding NameItemList}"
                SelectedItem="{Binding SelectedNameItem}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="DropDownOpened">
                        <i:InvokeCommandAction Command="{Binding DropdownSelectionChanged}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <Label
                Content="Наименование"/>
            <TextBox
                IsEnabled="False"
                Text="{Binding NameItem}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Column="0"
                    Grid.Row="0"
                    Orientation="Vertical"
                    Margin="0 0 5 0">
                    <Label
                        Content="Еденица измерения"/>
                    <TextBox
                        IsEnabled="False"
                        Text="{Binding UnitMeasure}"/>
                </StackPanel>
                <StackPanel 
                    Grid.Column="1"
                    Grid.Row="0"
                    Orientation="Vertical"
                    Margin="5 0 0 0">
                    <Label
                        Content="Количество"/>
                    <TextBox 
                        IsEnabled="True"
                        Text="{Binding QuantityReceipt}"/>
                </StackPanel>
                <StackPanel 
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="0 5 5 5">
                    <Label
                        Content="Срок годности (до):"/>
                    <DatePicker
                        SelectedDate="{Binding ExpirationDate}"/>

                </StackPanel>
                <StackPanel 
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="5 5 0 5">
                    <Label
                        Content="Дата поступления:"/>
                    <DatePicker
                        SelectedDate="{Binding DateReceipt}"/>

                </StackPanel>
            </Grid>

            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0 10">
                
                <Button
                    Content="Очистить"
                    Width="100"
                    Height="30"
                    Margin="5 5 15 5"
                    Command="{Binding ResetCommand}"/>
                <Button
                    Content="Добавить"
                    Width="100"
                    Height="30"
                    Margin="15 5 5 5"
                    Command="{Binding AddReceiptCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
