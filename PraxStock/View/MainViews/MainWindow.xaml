<Window x:Class="PraxStock.View.MainViews.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PraxStock"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="False">

    <Border>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Border
                Grid.ColumnSpan="3"
                Grid.Row="1"
                Grid.RowSpan="2"
                BorderThickness="0 2 2 2"
                CornerRadius="0 5 5 0"
                BorderBrush="Gray">

                <DataGrid   
                    Grid.Row="2" 
                    ItemsSource="{Binding DataStockList}"
                    SelectedItem="{Binding CurrentDataStock}"
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    AutoGenerateColumns="False">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номер" Binding="{Binding Path=IdItem}"/>
                        <DataGridTextColumn Header="Наименование" Binding="{Binding Path=NameItem}"/>
                        <DataGridTextColumn Header="Ед.измер." Binding="{Binding Path=UnitMeasure}"/>
                        <DataGridTextColumn Header="Остаток" Binding="{Binding Path=RemainingStock}"/>
                        <DataGridTextColumn Header="Срок годности" Binding="{Binding Path=ExpirationDate, StringFormat=dd-MM-yyyy}"/>
                        <DataGridTextColumn Header="Дата поступления" Binding="{Binding Path=DateReceipt, StringFormat=dd-MM-yyyy}"/>
                        <DataGridTextColumn Header="Дата перемещения на пост" Binding="{Binding Path=DateMove, StringFormat=dd-MM-yyyy}"/>
                    </DataGrid.Columns>
                    <!--<ListView.Resources>

                        <DataTemplate x:Key="DefaultTemplateItem">

                            

                        </DataTemplate>

                    </ListView.Resources>-->

                    <!--<ListView.ItemContainerStyle>

                        <Style TargetType="ListViewItem">

                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            --><!--<Setter Property="ContentTemplate" Value="{StaticResource DefaultTemplateItem}"/>--><!--

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="White"/>
                                </Trigger>
                            </Style.Triggers>

                        </Style>

                    </ListView.ItemContainerStyle>-->

                </DataGrid>

            </Border>

        </Grid>
        
    </Border>

</Window>
