                                            </Trigger>
                                        </Style.Triggers>

                                    </Style>

                                </ListView.ItemContainerStyle>

                            </ListView>

                        </Border>

                    </Grid>
                    
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <Label Content="Перемещения"/>
                    </TabItem.Header>

